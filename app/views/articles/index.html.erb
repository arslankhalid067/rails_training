<button><a style="text-decoration:none; color:black" href="<%= new_article_path  %>"> Add New Article</a></button>
<h1>All Articles</h1>
    
<% @articles.each do |article| %>
   
    <h2><%= link_to article.title, article_path(article) %></h2>
    <p><%= article.body %></p>
    <b><small><%=article.created_at.in_time_zone('Asia/Karachi').strftime('%B %-d, %Y %l:%M%P')%></small></b>
    <p>
    <hr />
        <%= link_to "Edit Article", edit_article_path(article)%>

        <%= link_to "Delete Article",article,method: :delete, data: {confirm: "Are you sure?"} %>
    </p>
    <hr />
<% end %>

